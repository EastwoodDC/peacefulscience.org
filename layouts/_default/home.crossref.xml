<doi_batch version="5.3.1" xmlns="http://www.crossref.org/schema/5.3.1">
  <head>
    <doi_batch_id>Hugo {{now | time.Format "2006-01-02 15:04:05" }}</doi_batch_id>
    <timestamp>{{ now.Unix }}</timestamp>
    <depositor>
      <depositor_name>Peaceful Science</depositor_name>
      <email_address>info@peacefulscience.org</email_address>
    </depositor>
    <registrant>Peaceful Science</registrant>
  </head>
  <body>
  {{- range site.Pages }}
    {{- $doi := .Params.DOI | default "" }}
    {{- if hasPrefix  $doi "10." }}
      
    {{- end }}
  {{- end }}
  </body>
</doi_batch>
